{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build ball_sheet",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-o",
                "ball_sheet",
                "ball_sheet.c",
                "-I/opt/homebrew/include",
                "-I/opt/homebrew/include/SDL2",
                "-L/opt/homebrew/lib",
                "-lSDL2",
                "-lm"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}